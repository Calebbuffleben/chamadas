# Copy to .env.local and adjust if needed

# LiveKit local server URL
LIVEKIT_URL=ws://localhost:7880

# API credentials must match apps/livekit/livekit.yaml keys map
LIVEKIT_API_KEY=devkey
LIVEKIT_API_SECRET=devsecret12345678901234567890

# Frontend will call this endpoint to fetch token
NEXT_PUBLIC_CONN_DETAILS_ENDPOINT=/api/connection-details
# Optional: token TTL (e.g., 10m, 1h)
LIVEKIT_TOKEN_TTL=10m

# Show in-meeting DataChannel tester panel
NEXT_PUBLIC_ENABLE_TEST_PANELS=true

EGRESS_API_KEY=devkey
EGRESS_API_SECRET=devsecret12345678901234567890
EGRESS_WS_URL=ws://livekit:7880